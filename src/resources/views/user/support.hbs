<div class="title">YÊU CẦU TIẾP TẾ</div>

<form action="/support/create" method="post" class="support-form">
    <div class="delivery-address">
        {{!-- <label class="label-for-address" for="address">Địa chỉ nhận hàng</label> --}}
        <div class="input-and-btn">
            <input type="text" name="address" id="address" placeholder="Địa chỉ nhận hàng">
            <button type="button" class="btn bg-gradient-info choose-address-btn" data-bs-toggle="modal"
                data-bs-target="#exampleModal">Chọn địa chỉ</button>

        </div>

        {{!-- <select name="foodTypeSelect" class="field-select">
            <option value="Lương thực">Lương thực</option>
            <option value="Thuốc">Thuốc</option>
        </select> --}}

    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Chọn địa chỉ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>

                {{!-- Body of modal --}}

                <div class="modal-body" id="address-select">

                </div>

                {{!-- End body of modal --}}

                <div class="modal-footer">
                    <button type="button" class="btn bg-gradient-danger" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <div class="box-IQN">
        <div id="form-support">
            <div class="form-support-container">
                <input type="text" class="tb-1" name="itemName[]" placeholder="Tên sản phẩm">

                <input type="text" class="tb-2" name="quantity[]" placeholder="Số lượng">

                <input type="text" class="tb-3" name="note[]" placeholder="Ghi chú thêm">
                <button type="button" class="btn btn-danger remove-row-btn" onclick="removeRow(this)">Xóa</button>
            </div>
        </div>
        <div class="support-btn">
            <button type="button" class="btn btn-primary" id="add-input-btn">Thêm</button>
            <button type="submit" class="button-submit-items">Gửi yêu cầu</button>
        </div>
    </div>
</form>



<script src="/vendor/jquery/jquery-3.6.0.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var addButton = $('#add-input-btn');
        $(addButton).click(function (e) {
            e.preventDefault();
            $('#form-support').append('<div class="form-support-container"><input type="text" class="tb-1" name="itemName[]" placeholder="Tên sản phẩm"><input type="text" class="tb-2" name="quantity[]" placeholder="Số lượng"><input type="text" class="tb-3" name="note[]" placeholder="Ghi chú thêm"><button type="button" class="btn btn-danger remove-row-btn" onclick="removeRow(this)">Xóa</button></div>');
        });


    })
    function removeRow(e) {
        e.parentElement.remove();
    }
</script>