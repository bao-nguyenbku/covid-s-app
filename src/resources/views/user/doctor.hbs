                    <option value="blank" >Sắp xếp theo</option>
                    <optgroup label="Tên">
                        <option value="nameSort" >A - Z</option>
                        <option value="nameSort" >Z - A</option>
                    </optgroup>
                    <optgroup label="Chuyên Môn">
                        <option value="specialSort" >A - Z</option>
                        <option value="specialSort" >Z - A</option>
                    </optgroup>
                </select>
                <select id="dtr-filter-list" onchange="RegionChanged(this.value)">
                    <option value="region">Khu vực</option>
                    <option value="Quận 1">Quận 1</option>
