                    <option value="Quận 3">Quận 3</option>
                    <option value="Quận 4">Quận 4</option>
                    <option value="Quận 5">Quận 5</option>
                    <option value="Quận 6">Quận 6</option>
                    <option value="Quận 7">Quận 7</option>
                    <option value="Quận 8">Quận 8</option>
                    <option value="Quận 9">Quận 9</option>
                    <option value="Quận 10">Quận 10</option>
                    <option value="Quận 11">Quận 11</option>
                    <option value="Quận 12">Quận 12</option>
                    <option value="Quận bình tân">Q.Bình Tân</option>
                    <option value="Quận Bình Thạnh">Q.Bình Thạnh</option>
                    <option value="Quận Gò Vấp">Q.Gò Vấp</option>
                    <option value="QuậN Phú Nhuận">Q.Phú Nhuận</option>
                    <option value="Quận Tân Bình">Q.Tân Bình</option>
                    <option value="Quận Tân Phú">Q.Tân Phú</option>
                    <option value="TP Thủ Đức">TP Thủ Đức</option>
                    <option value="Huyện Bình Chánh">H.Bình Chánh</option>
                    <option value="Huyện Cần Giờ">H.Cần Giờ</option>
                    <option value="Huyện Củ Chi">H.Củ Chi</option>
                    <option value="Huyện Hóc Môn">H.Hóc Môn</option>
