                </select>
            </div>
        </div>        
    </div>

    <style>
        
    </style>

    <div id="doctor-list" class="dtr-container overflow-auto">
    {{#each data}} 
        
        <div name="{{support_zone}}" class="dtr-block">
            <div id='{{Doctorname}}' name="doctorname" class="dtr-block-title">
                <h4 class="dtr-name">Bác sĩ <strong>{{Doctorname}}</strong></h4>
                <button class="dtr-detail-btn btn btn-light" onclick="dtrDetail({{id}})">Chi tiết</button>
            </div>
            <div class="dtr-block-body">
                <img class="dtr-photo" src="/upload/bacsi.png" alt="Bác sĩ" title="ảnh bác sĩ">
                <div class="dtr-detail">
                    <span name="{{major}}" class="far fa-id-card">
                        <p>Chuyên khoa {{major}}</p> 
                    </span>
                    <span class="far fa-id-badge">
                        <p>{{job_title}}</p>
                    </span>
                    <span class="fas fa-phone-alt">
                        <p style="font-weight:normal;">{{phone_number}}</p>
                    </span>
                    <span name="{{experience}}" class="fas fa-award">
                        <p style="font-weight:normal;">{{experience}}+ năm kinh nghiệm</p>
                    </span>
                </div>
            </div>
        </div>
    {{/each}} 

    </div>
</div>


<div id="content-container2" class="content-container">

{{!-- Modal detail of doctor --}}
    <div class="dtr-profile-modal" id="dtr-detail-profile">
        <div class="img-file-dtr">
            <img src="upload/bacsi.png">
        </div>
        <hr>
        <div class="info-dtr">
            <p>Tên bác sĩ: <strong id="Doctorname"></strong></p>
            <p>Nơi công tác: <strong id="work_hospital"></strong></p>
            <p>Chuyên khoa: <strong id="major"></strong></p>
            <p>Số điện thoại: <strong id="phone_number"></strong></p>
            <p>Email: <strong id="email"></strong></p>
            <p>Chức vụ: <strong id="job_title"></strong></p>
            <p>Khu vực hỗ trợ: <strong id="support_zone"></strong></p>
            <p>Mô tả: <strong id="descriptions"></strong></p>
        </div>
        <button class='btn btn-primary btn-out' onclick="outDetail()">Thoát</button>
    </div>
    
    {{!-- End of modal detail of doctor --}}
</div>

