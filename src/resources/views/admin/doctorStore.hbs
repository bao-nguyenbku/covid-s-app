    <table class="order-table" id="volunteer-list">
      <thead>
        <tr>
          <th>Tên</th>
          <th>Chuyên môn</th>
          <th>Kinh nghiệm</th>
          <th>Nơi làm việc</th>
          <th>Khu vực hỗ trợ</th>
          <th>Số điện thoại</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each result}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.major}}</td>
          <td>{{this.experience}}</td>
          <td>{{this.work_hospital}}</td>
          <td>{{this.support_zone}}</td>
          <td>{{this.phone_number}}</td>
          <td>
            <button type="button" class="btn btn-info update-doctor-btn" data-bs-toggle="modal"
              data-bs-target="#exampleModal-2" data-doctor-id="{{this.id}}">Sửa</button>
            <button type="button" class="btn bg-gradient-warning" onclick="confirm('Bạn có chắc chắn xóa không?')"><a href="/admin/doctor/{{this.id}}/delete">Xóa</a></button>
          </td>
        </tr>
