// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String
}

model Doctor {
  id           String     @id @default(uuid())
  fullname     String
  workPlace    String
  title        String
  department   String
  phoneNumber  String
  image        String
  supportAreas District[]
}

model District {
  id      String   @id @default(uuid())
  name    String
  doctors Doctor[]
}
